%h1 Repo#show

- repo = @repo
.repo

	%span.owner= 		repo.owner
	\ /
	%span.name= 		repo.name
	%span.description= 	repo.description
	%span.watchers= 	repo.watchers
	%span.forks= 		repo.forks
	%span.github_url=  	repo.github_url
	%span.homepage=     repo.homepage
	%span.wiki_text(id="wiki_text_edit" class="mercury-region" data-type="editable")= strip_tags(repo.wiki_text)
	%span.edit_link= link_to "Edit", "/editor" + request.path

= link_to "Back to repo", request.path

= link_to "Home", :root