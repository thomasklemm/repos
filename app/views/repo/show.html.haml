%h1 Repo#show

- repo = @repo
.repo
	-# github
	%span.owner= 		repo.owner
	\ /
	%span.name= 		repo.name
	%span.description= 	repo.description
	%span.watchers= 	repo.watchers
	%span.forks= 		repo.forks
	%span.github_url=  	repo.github_url
	%span.homepage=     repo.homepage

	-# tags
	%span.tags
		%form(action="#" method="post")
			%input#tags_languages(type="text" name="languages")
			%input#tags_frameworks(type="text" name="frameworks")
			%input#tags_solutions(type="text" name="solutions")
			%button(type="submit") Senden

	-# wiki_text
	%span.wiki_text(id="wiki_text_edit" class="mercury-region" data-type="editable")!= repo.wiki_text
	%span#edit_link= link_to "Edit", "/editor" + request.path

-# Links
= link_to "Back to repo", request.path
= link_to "Home", :root
